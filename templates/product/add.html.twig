{% extends "base/index.html.twig" %}


{% block content %}
    <h1 class="title">Add Products</h1>
    <hr/>

    

    <!-- =======  Product Add Form Start  ========================== -->
    <div class="container add-product-form">
        <div class="row">
            <div class="col-12">
                <form class="row g-3">
                    <div class="col-md-4">
                        <label for="inputProductName" class="add-product-form-label">Product Name</label>
                        <input type="text" class="form-control" id="inputProductName" placeholder="Enter Product Name">
                    </div>
                    <div class="col-md-4">
                        <label for="inputProductSku" class="add-product-form-label">Product SKU</label>
                        <input type="text" class="form-control" id="inputProductSku" placeholder="Enter Product SKU">
                    </div>
                    <div class="col-md-4">
                        <label for="inputProductCategory" class="add-product-form-label">Product Category</label>
                        <select id="inputProductCategory" class="form-select" required>
                        <option value="" disabled selected hidden>Select Product Category</option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="inputProductBrand" class="add-product-form-label">Product Brand</label>
                        <select id="inputProductBrand" class="form-select" required>
                        <option value="" disabled selected hidden>Select Product Brand</option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="inputProductQuantity" class="add-product-form-label">Product Quantity</label>
                        <input type="number" class="form-control" id="inputProductQuantity" placeholder="Enter Product Quantity">
                    </div>
                    <div class="col-md-4">
                        <label for="inputProductPrice" class="add-product-form-label">Product Price</label>
                        <input type="number" class="form-control" id="inputProductPrice" placeholder="50">
                    </div>
                    <div class="col-md-4">
                        <label for="inputProductSalesUnit" class="add-product-form-label">Sales Unit</label>
                        <select id="inputProductSalesUnit" class="form-select" required>
                        <option value="" disabled selected hidden>Select Product Unit</option>
                        <option>Piece</option>
                        <option>Kg</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="inputStockAlert" class="add-product-form-label">Stock Alert</label>
                        <input type="number" class="form-control" id="inputStockAlert" placeholder="Enter Product Quantity">
                    </div>
                    <div class="col-md-4">
                        <label for="inputProductExpiryDate" class="add-product-form-label">Product Expiry Date</label>
                        <input type="date" class="form-control" id="inputProductExpiryDate">
                    </div>
                    <div class="col-md-4">
                        <label for="inputProductExpiryDate" class="add-product-form-label">Product Status</label>
                        <div class="radio-buttons-container">
                            <div class="radio-button">
                            <input name="radio-group" id="radio2" class="radio-button__input" type="radio" value="active" checked>
                            <label for="radio2" class="radio-button__label">
                                <span class="radio-button__custom"></span>Active
                            </label>
                            </div>
                            <div class="radio-button">
                            <input name="radio-group" id="radio1" class="radio-button__input" type="radio" value="passive">
                            <label for="radio1" class="radio-button__label">
                                <span class="radio-button__custom"></span>Passive
                            </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <label for="inputProductDescription" class="add-product-form-label">Product Description</label>
                        <textarea class="form-control" id="inputProductDescription" rows="3" placeholder="Enter Product Description"></textarea>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Sign in</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- =======  Product Add Form End  ===================== -->
    

{% endblock %}