{% extends "base/index.html.twig" %}


{% block content %}
    <h1 class="title">All Categories</h1>
    <hr/>

    <button onclick="window.location.href='{{ path('app_add_category') }}';" class="add-product-button">
        Add Category<i class='bx bx-plus-medical'></i>
    </button>

    <!-- =======  Data-Table  = Start  ========================== -->
    <div class="container-fluid product-table">
        <div class="row">
            <div class="col-12">
                <div class="data_table">
                    <table id="example" class="table table-striped table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Number of products</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Mobile</td>
                                <td>66</td>
                                <td>Active</td>
                                <td>
                                    <div class="actions">
                                        <button class="actionbutton">
                                            <span class="actionText">Edit</span>
                                            <span class="actionIcon">
                                                <i class='bx bx-edit'></i>
                                            </span>
                                        </button>
                                        <button class="actionbutton">
                                            <span class="actionText">Trash</span>
                                            <span class="actionIcon">
                                                <i class='bx bx-trash'></i>
                                            </span>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>Desktop</td>
                                <td>15</td>
                                <td>Active</td>
                                <td>
                                    <div class="actions">
                                        <button class="actionbutton">
                                            <span class="actionText">Edit</span>
                                            <span class="actionIcon">
                                                <i class='bx bx-edit'></i>
                                            </span>
                                        </button>
                                        <button class="actionbutton">
                                            <span class="actionText">Trash</span>
                                            <span class="actionIcon">
                                                <i class='bx bx-trash'></i>
                                            </span>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- =======  Data-Table  = End  ===================== -->
    

{% endblock %}